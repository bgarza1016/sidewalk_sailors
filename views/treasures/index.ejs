<% include ../partials/_head %>
<% include ../partials/_nav %>



<div class="container">
  <div class="row">
   <% treasures.forEach(function(treasure){ %>
    <div class="col s3">
      <div class="card">
        <div class="card-image">
          <a href="/treasures/<%= treasure.id %>">
            <img id="treasure-image" src=" <%= treasure.img_url %> "/>
          </a>
          <span class="card-title">
               <p><%= treasure.name %></p>
          </span>
        </div>
        <div class="card-content">
          <p><%= treasure.description %></p>
          <p><%= treasure.cross_street %></p>
          <p><%= treasure.city %></p>
          <p><%= treasure.state %></p>
          <p><%= treasure.zipcode %></p>
          <p>Owner: <img src="<%= avatar %>"></p>
        </div>
        <div class="card-action">
          <a href="/treasures/<%= treasure._id %>/edit">Edit Treasure</a>
          <form method="POST" action="/treasures/<%= treasure._id %>?_method=DELETE">
            <button type="submit">Delete Treasure</button>
          </form>
        </div>
  </div>
  </div>
  <% }); %>
  </div>
  </div>

<% include ../partials/_footer %>
