<% include ../partials/_head %>
<% include ../partials/_nav %>


<h1 class="center"><%= title %></h1>
<div class="container">
  <div class="row">
  <% treasures.forEach(function(treasure, i){ %>
    <!-- TREASURE -->
    <div class="col s3">
      <div class="card">
        <div class="card-image">
          <a href="/treasures/<%= treasure.id %>">
            <img id="treasure-image" src=" <%= treasure.img_url %> "/>
          </a>
          <span class="card-title">
               <p><%= treasure.name %></p>
          </span>
        </div>
        <div class="card-content">
          <p><%= treasure.description %></p>
          <p><%= treasure.cross_street %></p>
          <p><%= treasure.city %></p>
          <p><%= treasure.state %></p>
          <p><%= treasure.zipcode %></p>
          <p>Owner: <img src="<%= avatar %>"></p>
        </div>
      </div>
    </div>

    <% if((i+1) % 4 === 0) { %>
      </div>
      <div class="row">
    <% } %>

  <% }); %>
  </div>
</div>

<% include ../partials/_footer %>
