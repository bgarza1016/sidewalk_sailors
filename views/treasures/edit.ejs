<% include ../partials/_head %>
<% include ../partials/_nav %>
   <h1 class="center">Update Your Treasure</h1>
<div class="container new-treasure-container">
 <div class="row col s12 treasure-row">
    <div class="col s6" id="treasure-form">
      <form action="/treasures?_method=PUT" method="POST">
        <div class="input-field">
          <input name="name" id="name" type="text" value="<%= treasure.name %>" class="validate">
          <label for="name">Treasure Name</label>
        </div>
        <div class="input-field">
          <input id="img_url" type="text" class="materialize-textarea" value="<%= treasure.img_url %>" name="img_url">
          <label for="img_url">Upload Image Url</label>
        </div>
         <div class="input-field">
          <textarea id="textarea1" name="description" class="materialize-textarea">value="<%= treasure.description %>"</textarea>
          <label for="description">Description</label>
        </div>
         <div class="input-field">
          <input id="street" name="street" type="text" value="<%= treasure.street %>" class="validate">
          <label for="street">Street</label>
        </div>
        <div class="input-field">
          <input id="city" name="city" type="text" value="<%= treasure.city %>" class="validate">
          <label for="city">City</label>
        </div>
         <div class="input-field">
          <input id="state" name="state" type="text" value="<%= treasure.state %>" class="validate">
          <label for="state">State</label>
        </div>
         <div class="input-field">
          <input type="text" pattern="[0-9]*" value="<%= treasure.zipcode %>" maxlength="5" min="0" id="zipcode"  name="zipcode">
          <label for="zipcode">Zip</label>
        </div>
      <button class="btn waves-effect waves-light right" type="submit" name="action">Add Treasure
         <i class="material-icons">stars</i>
      </button>
    </form>
  </div>
    <div class="col s6 treasure-new-image"></div>
  </div>
</div>
<% include ../partials/_footer %>


