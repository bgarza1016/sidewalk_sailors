<% include ../partials/_head %>
<% include ../partials/_nav %>
   <h1 class="center">Update Your Treasure</h1>
<div class="container new-treasure-container">
 <div class="row col s12 treasure-row">
    <div class="col s6" id="treasure-form">
      <!-- <form action="/treasures?_method=PUT" method="POST"> -->
      <form action="/treasures" method="POST">
        <div class="input-field">
          <input type="text" name="name" id="name" value="<%= treasure.name %>" class="validate">
          <label for="name">Treasure Name</label>
        </div>
        <div class="input-field">
          <input type="text" name="img_url" id="img_url" value="<%= treasure.img_url %>" class="materialize-textarea" >
          <label for="img_url">Upload Image Url</label>
        </div>
         <div class="input-field">
          <textarea id="treasureDescription" name="description" class="materialize-textarea"><%= treasure.description %></textarea>
          <label for="description">Description</label>
        </div>
         <div class="input-field">
          <input type="text" name="zipcode" id="zipcode" value="<%= treasure.zipcode %>" maxlength="5" min="0" pattern="[0-9]*" >
          <label for="zipcode">Zip</label>
        </div>
      <button type="submit" name="action" class="btn waves-effect waves-light right">Add Treasure
         <i class="material-icons">stars</i>
      </button>
    </form>
  </div>
    <div class="col s6 treasure-new-image"></div>
  </div>
</div>
<% include ../partials/_footer %>


