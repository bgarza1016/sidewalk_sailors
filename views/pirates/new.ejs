<% include ../partials/_head %>
<% include ../partials/_nav %>
   <h1>Register</h1>
 <div class="parallax-container join-image"></div>
<div class="container">
  <div class="row join-form">
    <form class="col s12">
      <div class="row">
        <div class="input-field col s6">
          <input id="username" type="text" class="validate">
          <label for="username">Email</label>
        </div>
      </div>
      <div class="row">
          <label for="zipcode"> &nbsp;&nbsp;Zipcode</label><br>
        <div class="input-field col s12">
<input type="string" pattern="[0-9]*" maxlength="5" min="0" id="zipcode">
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <input id="password" type="password" class="validate">
          <label for="password">Password</label>
        </div>
      </div>
      <button class="btn waves-effect waves-light join-submit-button red" type="submit" name="action">Join the Crew!</button>
    </form>
  </div>
</div>
<% include ../partials/_footer %>
